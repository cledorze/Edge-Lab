[Unit]
Description=ASCII Boot Splash
DefaultDependencies=no
After=systemd-vconsole-setup.service local-fs.target
Before=multi-user.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/sh -c 'clear > /dev/tty1; cat /etc/bootsplash.txt > /dev/tty1'
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/tty1
TTYReset=yes

[Install]
WantedBy=sysinit.target
